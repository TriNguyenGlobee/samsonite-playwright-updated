{
  "name": "playwright-allure-pom",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:multi": "powershell -ExecutionPolicy Bypass -File run-multi.ps1",
    "test:multiparallel": "powershell -ExecutionPolicy Bypass -File run-multi-parallel.ps1",
    "test:chrome": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit",
    "test:stg-chrome": "npx cross-env ENV=stg npx playwright test --project=chromium",
    "test:stg-firefox": "npx cross-env ENV=stg npx playwright test --project=firefox",
    "test:stg-webkit": "npx cross-env ENV=stg npx playwright test --project=webkit",
    "test:login": "npx playwright test tests/login.test.ts",
    "test:debug": "npx ts-node test-env.ts",
    "report:generate": "npx allure generate ./allure-results --clean -o ./allure-report",
    "report:open": "npx allure open ./allure-report",
    "report:clean": "rimraf allure-results allure-report",
    "report:clean+": "rimraf allure-results* allure-report*"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.3.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.3",
    "cross-env": "^10.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
